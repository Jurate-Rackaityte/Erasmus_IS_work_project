<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_messages"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jaeka.chatton.MessageActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Write message"
        android:ems="10"
        android:layout_marginStart="37dp"
        android:layout_marginBottom="12dp"
        android:id="@+id/writeMsg"
        android:layout_above="@+id/refreshMsg"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/submitMsg"
        tools:text="Write message" />
    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06">
            <Button
                android:text="Refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/refreshMsg"
                tools:text="Refresh"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/writeMsg"
                android:layout_marginBottom="18dp" />

            <Button
                android:text="Send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="78dp"
                android:id="@+id/submitMsg"
                tools:text="Send"
                android:onClick="sendMsg"
                android:layout_alignBaseline="@+id/refreshMsg"
                android:layout_alignBottom="@+id/refreshMsg"
                android:layout_alignParentEnd="true" />
        </LinearLayout>
</LinearLayout>
</RelativeLayout>