@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Chatton</title>

    <meta name="author" content="" lang="">
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="css/style.css" media="all">
</head>
<body>
    <div class="wrapper">
        <header>
            <p class="welcome">Welcome to Chatton    </p>
        </header>
        <section>
            <h2>
                Login
            </h2>
            <form method="POST" action="">
                <p><label>Username: <input name="username" type="text" placeholder="Username" required size="25"></label></p>
                <p><label>Password: <input name="password" type="password" required size="25"></label></p>
                <p><input type="submit" value="Login!" /></p>
            </form>
        </section>
        <section>
            <h2>
                Register
            </h2>
            <p> It is fast and free. </p>
            <form method="POST" action="">
                <p><label>Username: <input name="username" type="text" placeholder="Username" required size="25"></label></p>
                <p><label>Password: <input name="password" type="password" required size="25"></label></p>
                <p><label>Confirm password: <input name="confirm_password" type="password" required size="25"></label></p>
                <p>
                    <input type="submit" value="Submit" />
                    <input type="reset" value="Clear" />
                </p>
            </form>
        </section>
    </div>
</body>
</html>